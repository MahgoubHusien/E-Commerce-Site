<h1> <%= @user.email_address %> </h1>

<h1 class="text-2xl font-bold text-gray-800">Welcome, <%= @user.email_address %>!</h1>

<h2 class="text-xl font-semibold mt-6">Your Wishlist</h2>

<% if @wishlist_products.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-4">
    <% @wishlist_products.each do |product| %>
      <div class="bg-white shadow-md rounded-lg p-4 text-center hover:shadow-lg transition">
        
        <% if product.featured_image.attached? %>
          <%= image_tag product.featured_image, class: "w-full h-48 object-cover rounded-t-lg mb-2" %>
        <% end %>

        <h2 class="text-lg font-semibold text-gray-900">
          <%= link_to product.name, product, class: "hover:text-blue-600" %>
        </h2>

        <%= button_to "Remove from Wishlist", wishlist_item_path(product), method: :delete, class: "mt-4 bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600 mt-4">You haven't added anything to your wishlist yet.</p>
<% end %>
