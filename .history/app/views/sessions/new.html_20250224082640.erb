<% if flash[:alert] %>
  <%= tag.div flash[:alert], class: "text-red-600 bg-red-100 border border-red-400 px-4 py-2 rounded-md mb-4" %>
<% end %>

<% if flash[:notice] %>
  <%= tag.div flash[:notice], class: "text-green-600 bg-green-100 border border-green-400 px-4 py-2 rounded-md mb-4" %>
<% end %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Sign in</h2>

  <%= form_with url: session_path, class: "space-y-4" do |form| %>
    <div>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", 
        placeholder: "Enter your email address",
        value: params[:email_address],
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div>
      <%= form.password_field :password, required: true, autocomplete: "current-password", 
        placeholder: "Enter your password",
        maxlength: 72,
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex justify-center">
      <%= form.submit "Sign in", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Forgot password?", new_password_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
