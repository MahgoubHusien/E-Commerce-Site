<h1 class="text-2xl font-bold mb-4">Your Wishlist</h1>

<% if @wishlist_products.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @wishlist_products.each do |product| %>
      <div class="bg-white shadow-md rounded-lg p-4 text-center hover:shadow-lg transition">
        
        <% if product.featured_image.attached? %>
          <%= link_to product, class: "block" %>
            <%= image_tag product.featured_image, class: "w-full h-48 object-cover rounded-t-lg mb-2" %>
          </%= link_to %>
        <% end %>

        <h2 class="text-lg font-semibold text-gray-900 hover:text-blue-600">
          <%= link_to product.name, product %>
        </h2>

        <p class="text-gray-600 mt-2"><%= product.description.truncate(50) %></p>

        <%= render "wishlist_button", product: product %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500 text-center mt-4">You have no items in your wishlist.</p>
<% end %>

<%= link_to "Back to Products", products_path, class: "inline-block mt-4 text-blue-500 hover:underline" %>
