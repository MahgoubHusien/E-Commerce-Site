<% if product.inventory_count? %>
  <p class="text-green-600 font-semibold"><%= product.inventory_count %> in stock</p>
<% else %>
  <p class="text-red-600 font-semibold">Out of stock</p>
  <p class="text-gray-600">Email me when available.</p>

  <%= form_with model: [product, Subscriber.new], class: "mt-4" do |form| %>
    <div class="flex items-center gap-2">
      <%= form.email_field :email, placeholder: "you@example.com", required: true, class: "w-full md:w-auto px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      <%= form.submit "Submit", class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>
<% end %>
