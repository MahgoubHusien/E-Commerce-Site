<div class="form-container">
  <%= form_with model: product, class: "product-form" do |form| %>

    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :inventory_count, class: "form-label" %>
      <%= form.number_field :inventory_count, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <div class="rich-text-container">
        <%= form.rich_text_area :description, class: "form-textarea" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :featured_image, class: "form-label" %>
      <%= form.file_field :featured_image, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.submit "Save Product", class: "form-button" %>
    </div>

  <% end %>
</div>
