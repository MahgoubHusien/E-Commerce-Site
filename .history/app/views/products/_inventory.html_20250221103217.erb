<% if product.inventory_count? %>
  <p><%= product.inventory_count %> in stock</p>
<% else %>
  <p>Out of stock</p>
  <p>Email me when available.</p>

  <%= form_with model: [product, Subscriber.new] do |form| %>
    <div class="input-group">
      <%= form.email_field :email, placeholder: "you@example.com", required: true, class: "email-field" %>
      <%= form.submit "Submit", class: "submit-button" %>
  </div>
  <% end %>
<% end %>
