<h1 class="text-4xl font-bold text-center text-gray-900 my-6">
  <%= t ".title" %>
</h1>

<div class="flex justify-between items-center mb-4">
  <% if authenticated? %>
    <%= link_to "New product", new_product_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-800 transition" %>
  <% else %>
    <%= link_to "Login", new_session_path, class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition" %>
  <% end %>
</div>

<div id="products" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% @products.each do |product| %>
    <div class="bg-white p-4 shadow-md rounded-lg">
      <%= link_to product.name, product, class: "text-lg font-semibold text-blue-700 hover:underline" %>
    </div>
  <% end %>
</div>
