<%= form_with model: product, class: "max-w-lg mx-auto shadow-md p-6 rounded-lg" do |form| %>
  
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :inventory_count, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.number_field :inventory_count, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.rich_text_area :description, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :featured_image, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50" %>
  </div>
  
  <div class="mt-6 flex justify-between">
    <%= link_to "Cancel", products_path, class: "bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition" %>
    <%= form.submit "Save Product", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition" %>
  </div>

<% end %>
