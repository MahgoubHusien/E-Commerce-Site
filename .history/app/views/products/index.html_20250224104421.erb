<h1 class="text-3xl font-bold text-center text-gray-800 mb-6"><%= t ".title" %></h1>

<div class="flex justify-center space-x-4 mb-6">
  <% if authenticated? %>
    <%= link_to "New product", new_product_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" %>
  <% else %>
    <%= link_to "Login", new_session_path, class: "bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition" %>
  <% end %>
</div>

<div id="products" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @products.each do |product| %>
    <% if product.featured_image.attached? %>
          <%= image_tag product.featured_image, class: "w-full h-48 object-cover rounded-t-lg mb-2" %>
        <% end %>
    <div class="bg-white shadow-md rounded-lg p-4 text-center hover:shadow-lg transition">
      <%= link_to product.name, product, class: "text-lg font-semibold text-gray-900 hover:text-blue-600" %>
    </div>
  <% end %>
</div>
